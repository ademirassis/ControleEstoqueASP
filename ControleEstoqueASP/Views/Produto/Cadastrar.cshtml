@model Produto

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Cadastrar" method="post">
    <fieldset>
        <legend>Cadastrar Produto</legend>
        <div asp-validation-summary="ModelOnly" class="alert alert-dismissible alert-warning"></div>

        <div class="form-group" id="Nome">
            <label asp-for="Nome"></label>
            <input type="text" asp-for="Nome"
                   class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group" id="Descricao">
            <label asp-for="Descricao"></label>
            <input type="text" asp-for="Descricao"
                   class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group" id="Fornecedor">
            <label asp-for="Fornecedor"></label>
            <select asp-items="@ViewBag.Fornecedores" class="form-control" name="drpFornecedores">
                <option value="value">-- Selecione --</option>
            </select>
        </div>

        <div class="form-group" id="Categoria">
            <label asp-for="Categoria"></label>
            <select asp-items="@ViewBag.Categorias" class="form-control" name="drpCategorias">
                <option value="value">-- Selecione --</option>
            </select>
        </div>

        <div class="form-group" id="Preco">
            <label asp-for="Preco"></label>
            <input type="text" asp-for="Preco"
                   class="form-control" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>

        <button type="submit" value="Cadastrar" class="btn btn-primary mb-2">Cadastrar</button>
    </fieldset>
</form>

<div><a href="~/Produto/Index" class="btn btn-primary">Voltar</a></div>