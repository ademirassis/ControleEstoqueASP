@model Categoria

@{
    ViewData["Title"] = "Alterar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Alterar" method="post">
    <fieldset>
        <legend>Alterar Categoria</legend>

        <!-- se necessário, pesquisar por "Tag helper" -->
        <input type="hidden" asp-for="Id" readonly="" />

        <div class="form-group" id="Nome">
            <label>Nome:</label>
            <input type="text" asp-for="Nome" class="form-control" />
        </div>

        <div class="form-group" id="Descricao">
            <label>Descrição:</label>
            <input type="text" asp-for="Descricao" class="form-control" />
        </div>

        <button type="submit" value="Salvar" class="btn btn-primary">Salvar</button>
    </fieldset>
</form>

<div><a href="~/Categoria/Index" class="btn btn-primary">Voltar</a></div>