@inject Microsoft.AspNetCore.Identity.SignInManager<UsuarioLogado> SignManager
@inject Microsoft.AspNetCore.Identity.UserManager<UsuarioLogado> UserManager

<!DOCTYPE html>

<html>
<head>
    <!-- Meta tags Obrigatórias -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    @*<script src="~/js/jquery-3.4.1.min.js"></script>*@

    <title>@ViewBag.Title</title>
</head>
<body>

    @* Barra de Navegação *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

        <a class="navbar-brand" href="~/Home/Index">Controle de Estoque</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Cadastro</a>
                    <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 40px, 0px);">
                        <a class="dropdown-item" href="~/Categoria/Index">Categoria</a>
                        <a class="dropdown-item" href="~/Fornecedor/Index">Fornecedor</a>
                        <a class="dropdown-item" href="~/Produto/Index">Produto</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="~/Usuario/Index">Usuário</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Movimento/Index">Movimentação</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Relatórios</a>
                    <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 40px, 0px);">
                        <a class="dropdown-item" href="~/Devolucao/RDevolucao">Devoluções</a>
                        <a class="dropdown-item" href="~/Movimento/RMovimento">Movimentos</a>
                        <a class="dropdown-item" href="~/Estoque/REstoque">Posição de Estoque</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Apis">APIs</a>
                </li>
            </ul>
            <ul class="form-inline my-2 my-lg-0">
                @if (SignManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" href="#"> @UserManager.GetUserName(User) </a>
                    </li>
                    <li class="nav-item dropdown show">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Sair</a>
                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 40px, 0px);">
                            <a class="dropdown-item nav-link" asp-action="Logout" asp-controller="Usuario">Logout </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item disabled" href="#">  </a>

                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="btn btn-secondary my-2 my-sm-0" asp-action="Login" asp-controller="Usuario"> Entrar </a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    @* Conteúdo *@
    <div class="m-5">
        @RenderBody()
    </div>

    @* Rodapé *@
    <hr />
    <footer>
        <p style="text-align:center">
            &copy; @DateTime.Now.Year - Desenvolvido por Ademir Assis, Claudio Nogatz e Iranei Claudio
        </p>
    </footer>

    <!-- JavaScript (Opcional) -->
    <!-- jQuery primeiro, depois Popper.js, depois Bootstrap JS -->
    @*<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>
